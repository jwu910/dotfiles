[core]
	quotepath = false
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = /home/joshua/.gitignore
[color]
	ui = true
[include]
	path = dotfiles/alias/.gitconfig-alias
[includeIf "gitdir:~/"]
	path = dotfiles/.gitconfig-personal
	path = dotfiles/.signkey
[includeIf "gitdir:**/liferay/"]
	path = dotfiles/.gitconfig-work
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[log]
	decorate = auto
[gpg]
	program = gpg
[commit]
	gpgsign = true
[receive]
	certNonceSeed = true
[user]
	email = joshua.wu.0910@gmail.com
	name = Joshua Wu
